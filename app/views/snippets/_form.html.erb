<%= form_with(model: snippet, local: true) do |form| %>
  <% if snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'do' %>
    <%= form.text_field :name, id: :snippet_name %>
  </div>

  <div class="field">
    <%= form.label 'what' %>
    <%= form.text_field :content, id: :snippet_content %>
  </div>

  <div class="field">
    <%= form.label 'done?' %>
    <%= form.text_field :draft, id: :snippet_draft %>
  </div>

  <div class="field">
    <%= form.label 'when' %>
    <%= form.text_field :group_name, id: :snippet_group_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
